<body>
    
    <main >
       
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">SALES REPORT</h2>
                    
                </div>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary" id="print">Download</button>
                <a class="btn btn-secondary print ms-2" href="#"><i class="icon material-icons md-print"></i></a>
            </div>
            <br>
            <div class="row">
                <div class="col-md-9">
                    <div class="card mb-4">
                        <header class="card-header">
                            <div class="row gx-3">
                                <div class="col-lg-4 col-md-6 me-auto">
                                    <form action="/salesReport">
                                    <input type="text" placeholder="Search..." class="form-control">
                                </form>
                                </div>
                                <div class="col-lg-2 col-md-3 col-6">
                                    <select class="form-select" id="time_period" name="time_period">
                                        <option value="all">Status</option>
                                        <option value="weekly">weekly</option>
                                        <option value="monthly">monthly</option>
                                        <option value="yearly">yearly</option>
                                    </select>
                                </div>
                                <div class="col-lg-2 col-md-3 col-6">
                                    <input type="date" class="form-control" id="startDate" name="startDate">
                                </div>
                                <div class="col-lg-2 col-md-3 col-6">
                                    <input type="date" class="form-control" id="endDate" name="endDate">
                                </div>
                                <div class="col-lg-2 col-md-3 col-6">
                                    <a href="#" class="btn btn-md rounded font-sm" id="searchButton">Search</a>
                                </div>
                                
                               
                            </div>
                        </header> <!-- card-header end// -->
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Customer name</th>
                                            <th>Price</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th class="text-end"> Action </th>
                                        </tr>
                                    </thead>
                                  
                                    <form action="">
                                        <input type="hidden" id="selected_time_period" name="selected_time_period" value="<%= selectedTimePeriod %>">

                                    <input type="hidden" id="selected_time_period" name="selected_time_period" value="<%= selectedTimePeriod %>">
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td><%= order.orderId %></td>
                                                <td><b><%=order.userId.name%></b></td>
                                                <td><%= order.totalAmount.toFixed(2) %></td>
                                                <td><span class="badge rounded-pill alert-success"><%= order.OrderStatus%></span></td>
                                                <td><%= order.orderDate.toDateString() %></td>
                                                <td class="text-end">
                                                    <a href="/admin/orderDetails?id=<%= order._id %>" class="btn btn-md rounded font-sm">Detail</a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div> <!-- table-responsive //end -->
                        </div> <!-- card-body end// -->
                    </div> <!-- card end// -->
                </div>
              
                <div class="col-md-3">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="mb-3">REPORT</h5>
                            <form>
                                <div class="mb-4">
                                    <label for="order_id" class=" font-weight-bold">Total No: of Orders</label>
                                    <input type="text" class="form-control" id="order_id" value="<%=totalOrders%>" >
                                   
                                </div>
                                <div class="mb-4">
                                    <label for="order_customer" class=" font-weight-bold">Total No: of Customers</label>
                                    <input type="text" class="form-control" id="order_customer" value="<%=uniqueConstomers%>" >
                                </div>
                               
                                <div class="mb-4">
                                    <label for="order_total"  class=" font-weight-bold">No: of Cash On Delivery</label>
                                    <input type="text"  class="form-control" id="order_total" value="<%=cashOnDelivery%>">
                                </div>
                                <div class="mb-4">
                                    <label for="order_created_date"  class=" font-weight-bold">No: of Online Payment</label>
                                    <input type="text" class="form-control" id="order_created_date" value="<%=onlinePayment%>">
                                </div>
                                <div class="mb-4">
                                    <label for="order_modified_date" class=" font-weight-bold">No: of OrderCancelled</label>
                                    <input type="text" class="form-control" id="order_modified_date" value="<%=orderCancelled%>">
                                </div>
                                <div class="mb-4">
                                    <label for="order_customer_1" class=" font-weight-bold">Total Transaction</label>
                                    <input type="text" class="form-control" id="order_customer_1" value="<%=totalTransactionAmount%>" >
                                </div>
                            </form>
                            <form>
                        </div>
                    </div> <!-- card end// -->
                </div>
            </div>
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <li class="page-item active"><a class="page-link" href="#">01</a></li>
                        <li class="page-item"><a class="page-link" href="#">02</a></li>
                        <li class="page-item"><a class="page-link" href="#">03</a></li>
