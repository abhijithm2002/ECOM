                <script>
                    document.getElementById('productForm').addEventListener('submit', function (event) {
                        // Get values from form inputs
                        var regularPrice = parseFloat(document.getElementById('regularPrice').value);
                        var promoPrice = parseFloat(document.getElementById('promoPrice').value);
                        var quantity = parseInt(document.getElementById('quantity').value);
                
                        // Clear previous error messages
                        document.getElementById('regularPriceError').textContent = '';
                        document.getElementById('promoPriceError').textContent = '';
                        document.getElementById('quantityError').textContent = '';
                
                        // Validation rules
                        if (isNaN(regularPrice) || regularPrice < 0) {
                            document.getElementById('regularPriceError').textContent = 'Please enter a valid number';
                            event.preventDefault(); // Prevent form submission
                        } else if (isNaN(promoPrice) || promoPrice < 0) {
                            document.getElementById('promoPriceError').textContent = 'Please enter a valid number';
                            event.preventDefault();
                        } else if (isNaN(quantity) || quantity < 0) {
                            document.getElementById('quantityError').textContent = 'Please enter a valid number ';
                            event.preventDefault();
                        } else if (promoPrice > regularPrice) {
                            document.getElementById('promoPriceError').textContent = '  Regular Price should be greater ';
                            event.preventDefault(); // Prevent form submission
                        }
                        // Add more validation rules as needed
                
                    });
                </script>
